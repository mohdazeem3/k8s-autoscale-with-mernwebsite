pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        //git branch: 'main', url: 'https://github.com/mohdazeem3/k8s-autoscale-with-mernwebsite.git'
      }
  }
    stage('Build and Push backend Docker Image') {
      environment {
        DOCKER_IMAGE = "azeem345/mern-backend:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd backend && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Build and Push frontend Docker Image') {
      environment {
        DOCKER_IMAGE = "azeem345/mern-frontend:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd frontend && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "k8s-autoscale-with-mernwebsite"
            GIT_USER_NAME = "mohdazeem3"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "azeem.xyz@gmail.com"
                    git config user.name "Azeem"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" k8s/backend-D-S.yaml
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" k8s/frontend-D-S.yaml
                    git add k8s/backend-D-S.yaml
                    git add k8s/frontend-D-S.yaml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}
